{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "lib": ["DOM", "es2015"],
    "removeComments": false,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "baseUrl": "./"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
